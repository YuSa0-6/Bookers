<h1>Books<h1>
	<table>
		<thread>
			<tr>
				<th>Title</th>
				<th>Body</th>
				<th colspan="3"></th>
			</tr>
		</thread>
		<% @books.each do |book| %>
		<tbody>
			<tr>
				<td><%= book.title %></td>
				<td> <%= book.body %></td>
				<td><%= link_to "Show", book_path(book.id) %></td>
				<td><%= link_to "Edit", edit_book_path(book.id) %></td>
				<td><%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %></td>
			</tr>
		</tbody>
		<% end %>
	</table>
<h2>New book</h2>
<% if @book.errors.any? %>
  <%= @book.errors.count %>errors prohibited this book from being saved:
  <ul>
    <% @book.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
<% end %>

<%= form_with model: @book do |book| %>
	<div class="form">

	<div class="textField">
	    <p>Title</p>
		<%= book.text_field :title %>
	</div>

	<div class="textArea">
	    <p>Body</p>
		<%= book.text_area :body %>
	</div>

	<%= book.submit 'Create Book' %>
	</div>
<% end %>